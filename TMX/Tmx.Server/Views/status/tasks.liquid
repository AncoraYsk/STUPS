<html>
	<head>
		<title>Test tasks</title>
        <style>
            table, th, td {
                border: 1px solid black;
                border-collapse: collapse;
            }
        </style>
    </head>
	<body>
	<br>
        <table border="1">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Started</th>
                <th>Time taken</th>
                <th>Finished</th>
                <th>Status</th>
                <th>Client Id</th>
            </tr>
            {% for task in @Model.TasksForClients -%}
            <tr>
                <td>{{ task.Id }}</td>
                <td>{{ task.Name }}</td>
                <td>{{ task.StartTime }}</td>
                <td>{{ task.GetTimeTaken() }}</td>
                <td>{{ task.TaskFinished }}</td>
                <td>{{ task.TaskStatus }}</td>
                <td>{{ task.ClientId }}</td>
            </tr>
            {% endfor -%}
        </table>
	</body>
</html>